{
  "name": "generate-l10n",
  "displayName": "Flutter L10n AI Auto Generator",
  "description": "A VSCode extension to automate localization of Dart/Flutter projects using LLMs. Select files with raw text and let the AI generate .arb variables and translations for you.",
  "version": "1.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/felixmortas/generate-l10n.git"
  },
  "publisher": "felixmortas",
  "type": "module",
  "engines": {
    "vscode": "^1.103.0"
  },
  "icon": "resources/icon.png",
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Generate L10n Settings",
      "properties": {
        "generateL10n.provider": {
          "type": "string",
          "default": "mistral",
          "description": "LLM provider to use.",
          "enum": ["openai", "mistral", "google"]
        },
        "generateL10n.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for the selected provider."
        },
        "generateL10n.model": {
          "type": "string",
          "default": "mistral-small-latest",
          "description": "LLM model name to use for processing."
        }
      }
    },
    "commands": [
      {
        "command": "generateL10n.toggleCheck",
        "title": "Toggle Check"
      },
      {
        "command": "generateL10n.processSelectedFiles",
        "title": "Process Selected Files",
        "icon": "$(play)"
      },
      {
        "command": "generateL10n.configureExtension",
        "title": "Configure Extension",
        "icon": "$(gear)"
      },
      {
        "command": "generateL10n.refreshView",
        "title": "Refresh View",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "generateL10nContainer",
          "title": "L10n Generator",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "generateL10nContainer": [
        {
          "id": "generateL10nView",
          "name": "Files"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "generateL10n.processSelectedFiles"
        }
      ],
      "view/title": [
        {
          "command": "generateL10n.refreshView",
          "when": "view == generateL10nView",
          "group": "navigation",
          "icon": "refresh"
        },
        {
          "command": "generateL10n.configureExtension",
          "when": "view == generateL10nView",
          "group": "navigation",
          "icon": "gear"
        },
        {
          "command": "generateL10n.processSelectedFiles",
          "when": "view == generateL10nView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "auto-l10n-ts": "^0.3.2"
  }
}
