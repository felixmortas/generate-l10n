{
  "name": "generate-l10n",
  "displayName": "Flutter L10n AI Auto Generator",
  "description": "A VSCode extension to automate localization of Dart/Flutter projects using LLMs. Select files with raw text and let the AI generate .arb variables and translations for you.",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/felixmortas/generate-l10n.git"
  },
  "publisher": "felixmortas",
  "type": "module",
  "engines": {
    "vscode": "^1.103.0"
  },
  "icon": "resources/logo.png",
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Generate L10n Settings",
      "properties": {
        "generateL10n.provider": {
          "type": "string",
          "default": "mistral",
          "description": "LLM provider to use.",
          "enum": [
            "openai",
            "mistral",
            "google"
          ]
        },
        "generateL10n.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for the selected provider."
        },
        "generateL10n.model": {
          "type": "string",
          "default": "mistral-large-latest",
          "description": "LLM model name to use for processing (default: mistral-large-latest)."
        },
        "generateL10n.backup": {
          "type": "boolean",
          "default": false,
          "description": "Create backup files before modifying ARB and Flutter files."
        },
        "generateL10n.packageName": {
          "type": "string",
          "default": "",
          "description": "Flutter project package name (auto-detected from pubspec.yaml if empty)."
        }
      }
    },
    "commands": [
      {
        "command": "generateL10n.toggleCheck",
        "title": "Toggle Check"
      },
      {
        "command": "generateL10n.processSelectedFiles",
        "title": "Process Selected Files",
        "icon": "$(play)"
      },
      {
        "command": "generateL10n.configureExtension",
        "title": "Configure Extension",
        "icon": "$(gear)"
      },
      {
        "command": "generateL10n.refreshView",
        "title": "Refresh View",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "generateL10nContainer",
          "title": "L10n Generator",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "generateL10nContainer": [
        {
          "id": "generateL10nView",
          "name": "Files"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "generateL10n.processSelectedFiles"
        }
      ],
      "view/title": [
        {
          "command": "generateL10n.refreshView",
          "when": "view == generateL10nView",
          "group": "navigation",
          "icon": "refresh"
        },
        {
          "command": "generateL10n.configureExtension",
          "when": "view == generateL10nView",
          "group": "navigation",
          "icon": "gear"
        },
        {
          "command": "generateL10n.processSelectedFiles",
          "when": "view == generateL10nView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-prompts",
    "copy-prompts": "cpx \"src/core/prompts/**/*\" out/core/prompts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "cpx": "^1.5.0",
    "eslint": "^9.32.0",
    "tsx": "^3.12.6",
    "typescript": "^5.9.3",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@langchain/core": "^0.3.75",
    "@langchain/google-genai": "^0.2.17",
    "@langchain/langgraph": "^0.4.9",
    "@langchain/mistralai": "^0.2.1",
    "@langchain/openai": "^0.6.11",
    "commander": "^10.0.0",
    "dotenv": "^16.0.0",
    "yaml": "^2.8.1"
  }
}
