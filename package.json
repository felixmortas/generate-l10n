{
  "name": "generate-l10n",
  "displayName": "generate_l10n",
  "description": "",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "generateL10n.toggleCheck",
        "title": "Cocher/Décocher"
      },
      {
        "command": "generateL10n.processSelectedFiles",
        "title": "Traiter les fichiers sélectionnés",
        "icon": "$(play)"
      },
      {
        "command": "generateL10n.setApiKey",
        "title": "Définir la clé API"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "generateL10nContainer",
          "title": "Mon Extension",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "generateL10nContainer": [
        {
          "id": "generateL10nView",
          "name": "Mes fichiers"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "generateL10n.processSelectedFiles"
        }
      ],
      "view/title": [
        {
          "command": "generateL10n.processSelectedFiles",
          "when": "view == generateL10nView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "auto-l10n-ts": "^0.3.0"
  }
}
