{
  "name": "generate-l10n",
  "displayName": "generate_l10n",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "myExtension.toggleCheck",
        "title": "Cocher/Décocher"
      },
      {
        "command": "myExtension.processSelectedFiles",
        "title": "Traiter les fichiers sélectionnés",
        "icon": "$(play)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "myExtensionContainer",
          "title": "Mon Extension",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "myExtensionContainer": [
        {
          "id": "myExtensionView",
          "name": "Mes fichiers"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "myExtension.processSelectedFiles"
        }
      ],
      "view/title": [
        {
          "command": "myExtension.processSelectedFiles",
          "when": "view == myExtensionView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "myExtension.processSelectedFiles",
          "when": "view == myExtensionView",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
