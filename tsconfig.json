{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2022",

    "outDir": "out",
    "rootDir": "src",

    "lib": ["ES2022"],

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "sourceMap": true,

    "declaration": false,      // plus besoin de générer les types pour un package interne
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "src/test", "src/test_files"]
}
